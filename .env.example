# AIVideoMaker Freemium - Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AIVideoMaker
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:8000

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://aivideomaker:secure_password_123@postgres:5432/aivideomaker

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://redis:6379/0

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_51234567890abcdefghijklmnopqrstuvwxyz
STRIPE_SECRET_KEY=sk_test_51234567890abcdefghijklmnopqrstuvwxyz
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdefghijklmnopqrstuvwxyz

# Premium subscription price ID (create in Stripe Dashboard)
STRIPE_PREMIUM_PRICE_ID=price_1234567890abcdef

# =============================================================================
# OAUTH PROVIDERS CONFIGURATION
# =============================================================================

# Google OAuth2 (get from: https://console.developers.google.com/)
GOOGLE_CLIENT_ID=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnopqrstuvwxyz

# Microsoft OAuth2 (get from: https://portal.azure.com/)
MICROSOFT_CLIENT_ID=12345678-1234-1234-1234-123456789abc
MICROSOFT_CLIENT_SECRET=abc123def456ghi789jkl012mno345pqr678stu

# Apple Sign-In (get from: https://developer.apple.com/)
APPLE_CLIENT_ID=com.yourcompany.aivideomaker
APPLE_TEAM_ID=ABC123DEF4
APPLE_KEY_ID=ABCDEFGHIJ
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================
# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-app-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@aivideomaker.com
SMTP_FROM_NAME=AIVideoMaker

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# YouTube Data API (optional - for YouTube integration)
YOUTUBE_API_KEY=AIzaSyAbCdEfGhIjKlMnOpQrStUvWxYz123456789

# OpenAI API (optional - for advanced AI features)
OPENAI_API_KEY=sk-proj-abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456

# =============================================================================
# FILE STORAGE & PROCESSING
# =============================================================================
# File upload settings
MAX_FILE_SIZE_MB=100
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,webm
UPLOAD_DIRECTORY=/app/uploads
PROCESSED_DIRECTORY=/app/processed

# =============================================================================
# RATE LIMITING & QUOTAS
# =============================================================================
# Rate limiting per minute
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ANONYMOUS=20

# Free tier limits
FREE_TIER_VIDEO_MINUTES_MONTHLY=10
FREE_TIER_MAX_VIDEO_DURATION_MINUTES=1
FREE_TIER_MAX_RESOLUTION=720p
FREE_TIER_API_CALLS_MONTHLY=50

# Premium tier limits (-1 means unlimited)
PREMIUM_TIER_VIDEO_MINUTES_MONTHLY=-1
PREMIUM_TIER_MAX_VIDEO_DURATION_MINUTES=-1
PREMIUM_TIER_MAX_RESOLUTION=4K
PREMIUM_TIER_API_CALLS_MONTHLY=-1

# =============================================================================
# GDPR COMPLIANCE
# =============================================================================
# Data retention periods (in days)
USER_DATA_RETENTION_DAYS=365
USAGE_DATA_RETENTION_DAYS=730
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# Privacy settings
PRIVACY_POLICY_VERSION=2.0
COOKIE_CONSENT_REQUIRED=true
DATA_EXPORT_PROCESSING_DAYS=30
DATA_DELETION_GRACE_PERIOD_DAYS=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=true
REQUIRE_PASSWORD_LOWERCASE=true
REQUIRE_PASSWORD_NUMBERS=true
REQUIRE_PASSWORD_SYMBOLS=false

# Session settings
SESSION_TIMEOUT_MINUTES=1440  # 24 hours
REMEMBER_ME_DAYS=30

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure these for production deployment

# SSL/TLS
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# FORCE_HTTPS=true

# Performance
# WORKERS=4
# MAX_CONNECTIONS=1000
# KEEP_ALIVE=2

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace ALL placeholder values with your actual credentials
# 2. Never commit .env file to version control
# 3. Use strong, unique passwords and secrets
# 4. For production, consider using environment variables or secret management
# 5. Restart the application after changing these values